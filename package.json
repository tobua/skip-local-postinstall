{
  "name": "skip-local-postinstall",
  "description": "Skip postinstall on local npm installs.",
  "version": "0.0.0-development",
  "repository": "github:tobua/skip-local-postinstall",
  "license": "MIT",
  "author": "Matthias Giger",
  "scripts": {
    "test": "padua test"
  },
  "padua": {
    "source": true
  },
  "type": "module",
  "sideEffects": false,
  "main": "./index.js",
  "bin": "./bin.js",
  "source": "./index.js",
  "types": "index.d.ts",
  "files": [
    "**/*.js",
    "index.d.ts"
  ],
  "keywords": [
    "skip",
    "local",
    "postinstall",
    "plugin"
  ],
  "devDependencies": {
    "jest-fixture": "^3.0.0",
    "padua": "^0.5.6"
  },
  "prettier": "padua/configuration/.prettierrc.json",
  "eslintConfig": {
    "extends": "./node_modules/padua/configuration/eslint.cjs",
    "rules": {
      "no-console": 0,
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": [
        "babel-jest",
        {
          "configFile": "./node_modules/padua/configuration/.babelrc"
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!jest-fixture|logua|pakag|gzip-size|strip-ansi|ansi-regex).*/"
    ]
  },
  "engines": {
    "node": ">= 14"
  }
}
